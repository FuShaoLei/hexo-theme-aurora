#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0
  padding: 15px
  border-radius: 10px
  background: #efeeee
  box-shadow: 5px 5px 10px #d0cfcf, 
             -5px -5px 10px #ffffff

.widget-title
   text-decoration: none
   text-transform: uppercase
   letter-spacing: 1px
   border-left: 4px solid color-neu-bg
   margin-bottom: 1em
   margin-left: 5px
   padding-left: 5px
   line-height: 1em

.widget
  color: color-neu-normal-text
  text-shadow: 0 1px #fff
  a
    color: color-neu-highlight
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc